{
  "extends": [
    "@commitlint/config-angular"
  ],
  "rules": {
    "scope-enum": [
      2,
      "always",
      [
        "semver",
        "nnwml-self-driving-car",
        "nnwml-nascar",
        "waves-sine"
      ]
    ],
    "type-enum": [
      2,
      "always",
      [
        "build",
        "ci",
        "chore",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test",
        "release"
      ]
    ]
  }
}
